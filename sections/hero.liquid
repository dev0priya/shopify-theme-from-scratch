{% comment %}
  A full-width hero slider section with customizable slides including
  an image, heading, text, and a call-to-action button.
  Optimized for faster loading of the first slide.
{% endcomment %}

<style>
  .hero-slider-section {
    position: relative;
    width: 100%;
    height: 85vh; /* Height is set to 85% of viewport height */
    overflow: hidden;
    background-color: #f0f0f0; /* Fallback color */
  }

  .hero-slider__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 1s ease-in-out;
    background-size: cover;
    background-position: center;
  }
  
  /* NEW: Style for the eager-loaded image */
  .hero-slider__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensures the image covers the area */
    z-index: 0;
  }

  .hero-slider__slide.active {
    opacity: 1;
    z-index: 1;
  }

  .hero-slider__content {
    position: relative; /* Changed from absolute */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    text-align: center;
    background: rgba(0, 0, 0, 0.5);
    padding: 20px 40px;
    border-radius: 8px;
    z-index: 2; /* Ensure content is above the image */
    width: fit-content; /* Prevent content from stretching full width */
    min-width: 300px;
  }

  .hero-slider__content h2 {
    font-size: 2.5rem;
    margin: 0 0 10px;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
  }

  .hero-slider__content p {
    font-size: 1.2rem;
    margin: 0 0 20px;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
  }

  .hero-slider__button {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 12px 25px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: background-color 0.3s;
  }

  .hero-slider__button:hover {
    background-color: #0056b3;
  }

  .hero-slider__dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 3;
  }

  .hero-slider__dot {
    width: 12px;
    height: 12px;
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 50%;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .hero-slider__dot.active {
    background-color: #fff;
  }
</style>

<div class="hero-slider-section" data-section-id="{{ section.id }}" data-autoplay="{{ section.settings.autoplay }}" data-speed="{{ section.settings.cycle_speed | times: 1000 }}">
  {% for block in section.blocks %}
    <div 
      class="hero-slider__slide" 
      {{ block.shopify_attributes }}
      {% if forloop.first == false %}
        style="background-image: url('{{ block.settings.image | image_url: width: 1800, format: 'pjpg' }}');"
      {% endif %}
    >
      {% if forloop.first %}
        {% if block.settings.image != blank %}
          <img 
            src="{{ block.settings.image | image_url: width: 1800, format: 'pjpg' }}" 
            alt="{{ block.settings.image.alt | escape }}"
            class="hero-slider__image" 
            loading="eager" 
            fetchpriority="high"
            width="1800"
            height="{{ 1800 | divided_by: block.settings.image.aspect_ratio | round }}"
          >
        {% endif %}
      {% endif %}

      <div class="hero-slider__content">
        {% if block.settings.heading != blank %}
          <h2>{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p>{{ block.settings.subheading }}</p>
        {% endif %}
        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="hero-slider__button">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  {% endfor %}

  <div class="hero-slider__dots">
    {% for block in section.blocks %}
      <div class="hero-slider__dot" data-index="{{ forloop.index0 }}"></div>
    {% endfor %}
  </div>
</div>

<script>
  // The JavaScript remains the same, no changes needed here.
  document.addEventListener('DOMContentLoaded', function() {
    const sliderContainer = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!sliderContainer) return;

    const slides = sliderContainer.querySelectorAll('.hero-slider__slide');
    const dots = sliderContainer.querySelectorAll('.hero-slider__dot');
    const autoplay = sliderContainer.dataset.autoplay === 'true';
    const speed = parseInt(sliderContainer.dataset.speed, 10);
    let currentIndex = 0;
    let slideInterval;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });
      currentIndex = index;
    }

    function nextSlide() {
      const newIndex = (currentIndex + 1) % slides.length;
      showSlide(newIndex);
    }

    if (slides.length > 0) {
      showSlide(0);

      if (autoplay && slides.length > 1) {
        slideInterval = setInterval(nextSlide, speed);
      }

      dots.forEach(dot => {
        dot.addEventListener('click', () => {
          const index = parseInt(dot.dataset.index, 10);
          showSlide(index);
          if (autoplay && slides.length > 1) {
            clearInterval(slideInterval);
            slideInterval = setInterval(nextSlide, speed);
          }
        });
      });
    }
  });
</script>

{% schema %}
{
  "name": "Hero Slider",
  "max_blocks": 5,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "cycle_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Your Slide Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Describe the slide here."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider"
    }
  ]
}
{% endschema %}