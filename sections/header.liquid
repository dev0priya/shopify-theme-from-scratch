<style>
.site-header {
  width: 100vw;
  max-width: 100vw;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #f8fafc 0%, #e3e9f7 100%);
  border-bottom: 1px solid #e0e7ef;
  box-shadow: 0 2px 8px rgba(40, 60, 90, 0.04);
  position: relative;
  z-index: 10;
}

body {
  margin: 0;
  padding: 0;
}

.site-header__logo img {
  height: 56px;
  width: auto;
  display: block;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.07));
  transition: transform 0.2s;
}
.site-header__logo img:hover {
  transform: scale(1.05);
}

.site-header__nav {
  flex: 1;
  margin-left: 48px;
}

.site-header__menu {
  list-style: none;
  display: flex;
  gap: 40px;
  margin: 0;
  padding: 0;
}

.site-header__menu a {
  text-decoration: none;
  color: #223;
  font-weight: 600;
  font-size: 1.08rem;
  letter-spacing: 0.02em;
  padding: 6px 0;
  position: relative;
  transition: color 0.2s;
}

.site-header__menu a::after {
  content: "";
  display: block;
  height: 2px;
  width: 0;
  background: #0070f3;
  position: absolute;
  left: 0;
  bottom: -2px;
  transition: width 0.2s;
}

.site-header__menu a:hover {
  color: #0070f3;
}
.site-header__menu a:hover::after {
  width: 100%;
}

.site-header__actions {
  display: flex;
  align-items: center;
  gap: 28px;
}

.icon-link {
  display: flex;
  align-items: center;
  padding: 7px;
  border-radius: 8px;
  transition: background 0.2s, box-shadow 0.2s;
  box-shadow: 0 1px 4px rgba(40,60,90,0.07);
}

.icon-link:hover {
  background: #e3e9f7;
  box-shadow: 0 2px 8px rgba(40,60,90,0.12);
}

.cta-btn {
  background: linear-gradient(90deg, #0070f3 60%, #005bb5 100%);
  color: #fff;
  border: none;
  padding: 12px 28px;
  border-radius: 8px;
  font-weight: 700;
  text-decoration: none;
  font-size: 1.08rem;
  letter-spacing: 0.03em;
  box-shadow: 0 2px 8px rgba(40,60,90,0.07);
  transition: background 0.2s, box-shadow 0.2s;
}

.cta-btn:hover {
  background: linear-gradient(90deg, #005bb5 60%, #0070f3 100%);
  box-shadow: 0 4px 16px rgba(40,60,90,0.12);
}

@media (max-width: 900px) {
  .site-header {
    flex-direction: column;
    align-items: flex-start;
    padding: 0;
    width: 100vw;
    max-width: 100vw;
    margin-top: 2.5rem;
  }
  .container {
    flex-direction: column;
    align-items: flex-start;
    padding: 0 16px;
    width: 100%;
  }
  .site-header__nav {
    margin-left: 0;
    width: 100%;
    margin-top: 12px;
  }
  .site-header__menu {
    gap: 18px;
    justify-content: flex-start;
  }
  .site-header__actions {
    gap: 16px;
    margin-top: 12px;
  }
}
</style>

<header class="site-header">
  <div class="container">
    <div class="site-header__logo">
      <a href="/" aria-label="Home">
        {% if shop.brand.logo %}
            <img src="{{ shop.brand.logo | image_url: width: 180 }}" alt="{{ shop.brand.name }} logo" class="logo-img" />
        {% else %}
            <span class="logo-text" style="font-size:2rem;font-weight:700;color:#223;">{{ shop.brand.name }}</span>
        {% endif %}
      </a>
    </div>
    <nav class="site-header__nav">
      <ul class="site-header__menu">
        {% for link in linklists.main-menu.links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="site-header__actions">
      <a href="javascript:void(0);" class="cart-icon" onclick="document.querySelector('sidebar-drawer').open()">
        <svg width="24" height="24" fill="none" stroke="#223" stroke-width="2" viewBox="0 0 24 24"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61l1.6-9.39H6"/></svg>
        <span class="cart-count-bubble">{{ cart.item_count }}</span>
      </a>
      <a href="/account" class="icon-link" aria-label="Account">
        <svg width="24" height="24" fill="none" stroke="#223" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="8" r="4"/><path d="M6 20c0-2.21 3.58-4 8-4s8 1.79 8 4"/></svg>
      </a>
      <a href="/wishlist" class="icon-link" aria-label="Wishlist">
        <svg width="24" height="24" fill="none" stroke="#223" stroke-width="2" viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54z"/></svg>
      </a>
    </div>
  </div>
</header>