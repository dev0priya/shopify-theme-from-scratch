<style>
  .duo-offer-section {
    padding: 50px 20px;
    background-color: #fff;
  }

  .duo-offer__header {
    text-align: center;
    margin-bottom: 30px;
  }

  .duo-offer__heading {
    font-size: 2rem;
    font-weight: 700;
    margin: 0;
  }

  .duo-offer__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr; /* Creates two equal columns */
    gap: 20px;
  }

  .duo-offer__item {
    display: block;
    text-decoration: none;
    overflow: hidden;
    border-radius: 8px; /* Optional: adds rounded corners */
    height: var(--desktop-height, 400px); /* Applies height from settings */
  }

  .duo-offer__item img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .duo-offer__item:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .duo-offer__container {
      grid-template-columns: 1fr; /* Stacks the columns on mobile */
    }
    .duo-offer-section {
      padding: 30px 15px;
    }
    .duo-offer__item {
      height: var(--mobile-height, 300px); /* Applies mobile height from settings */
    }
  }
</style>

<div 
  class="duo-offer-section"
  style="
    --desktop-height: {{ section.settings.section_height }}px;
    --mobile-height: {{ section.settings.section_height_mobile }}px;
  "
>
  {% if section.settings.heading != blank %}
    <div class="duo-offer__header">
      <h2 class="duo-offer__heading">{{ section.settings.heading | escape }}</h2>
    </div>
  {% endif %}

  <div class="duo-offer__container">
    <a href="{{ section.settings.link_left | default: '#' }}" class="duo-offer__item">
      {% if section.settings.image_left != blank %}
        <img 
          src="{{ section.settings.image_left | image_url: width: 1000 }}" 
          alt="{{ section.settings.image_left.alt | escape }}"
          loading="lazy"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </a>

    <a href="{{ section.settings.link_right | default: '#' }}" class="duo-offer__item">
      {% if section.settings.image_right != blank %}
        <img 
          src="{{ section.settings.image_right | image_url: width: 1000 }}" 
          alt="{{ section.settings.image_right.alt | escape }}"
          loading="lazy"
        >
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Duo Offer Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (Optional)",
      "default": "Special Offers"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 200,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Desktop Image Height",
      "default": 400
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "min": 150,
      "max": 500,
      "step": 10,
      "unit": "px",
      "label": "Mobile Image Height",
      "default": 300
    },
    {
      "type": "header",
      "content": "Left Offer"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_left",
      "label": "Link (Optional)"
    },
    {
      "type": "header",
      "content": "Right Offer"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_right",
      "label": "Link (Optional)"
    }
  ],
  "presets": [
    {
      "name": "Duo Offer Section"
    }
  ]
}
{% endschema %}