<style>
  html, body {
    margin: 0;
    padding: 0;
    overflow-x: hidden; /* Prevent horizontal scrolling */
  }

  .cart-container {
    max-width: 700px;
    margin: 40px auto;
    padding: 30px;
    background: #fff;
    border-radius: 10px;
    box-sizing: border-box; /* Ensure padding doesn't cause overflow */
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    width: 100%; /* Ensure the container fits within the screen */
  }

  .cart-title {
    text-align: center;
    margin-bottom: 30px;
  }

  .cart-table {
    width: 100%; /* Ensure the table fits within the container */
    border-collapse: collapse;
  }

  .cart-table th {
    padding: 12px 8px;
    text-align: left;
    background: #f7f7f7;
  }

  .cart-table th:nth-child(2),
  .cart-table td:nth-child(2) {
    text-align: center;
  }

  .cart-table th:nth-child(3),
  .cart-table td:nth-child(3),
  .cart-table th:nth-child(4),
  .cart-table td:nth-child(4),
  .cart-table th:nth-child(5),
  .cart-table td:nth-child(5) {
    text-align: right;
  }

  .cart-table td {
    padding: 16px 8px;
    border-bottom: 1px solid #eee;
    vertical-align: middle;
  }

  .cart-product {
    display: flex;
    align-items: center;
  }

  .cart-product-img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    margin-right: 16px;
  }

  .cart-product-title {
    font-weight: 600;
  }

  .cart-product-variant {
    font-size: 13px;
    color: #888;
  }

  .cart-subtotal-row td {
    font-weight: 600;
    background: #fafafa;
  }

  .cart-checkout-btn {
    background: #0070f3;
    color: #fff;
    padding: 14px 32px;
    border-radius: 6px;
    font-size: 18px;
    text-decoration: none;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    transition: background 0.2s;
    display: inline-block;
    margin-top: 30px;
    text-align: right;
    border: none;
    cursor: pointer;
  }

  .cart-continue-btn {
    background: #eee;
    color: #333;
    padding: 12px 28px;
    border-radius: 6px;
    font-size: 16px;
    text-decoration: none;
    font-weight: 500;
    display: inline-block;
    margin-top: 30px;
    margin-right: 10px;
    border: 1px solid #ddd;
    transition: background 0.2s;
  }

  .cart-empty {
    max-width: 500px;
    margin: 80px auto;
    padding: 40px;
    background: #fff;
    border-radius: 10px;
    box-sizing: border-box; /* Ensure padding doesn't cause overflow */
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    text-align: center;
    width: 100%; /* Ensure the container fits within the screen */
  }

  .cart-empty-btn {
    background: #0070f3;
    color: #fff;
    padding: 12px 28px;
    border-radius: 6px;
    font-size: 16px;
    text-decoration: none;
    font-weight: 500;
    display: inline-block;
    margin-top: 20px;
  }

  .cart-qty-form {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  .cart-qty-btn {
    background: #eee;
    border: none;
    border-radius: 4px;
    width: 28px;
    height: 28px;
    font-size: 18px;
    cursor: pointer;
    font-weight: bold;
    transition: background 0.2s;
  }

  .cart-qty-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .cart-qty-input {
    width: 40px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 4px;
    font-size: 16px;
    background: #fff;
  }

  .cart-remove-btn {
    background: #ff4d4f;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 6px 14px;
    font-size: 15px;
    cursor: pointer;
    font-weight: 500;
    margin-left: 8px;
    transition: background 0.2s;
  }

  .cart-remove-btn:hover {
    background: #d9363e;
  }
</style>

{% if cart.item_count > 0 %}
  <!-- Show cart table and products when cart is NOT empty -->
  <div class="cart-container">
    <h1 class="cart-title">{{ 'cart.title' | t }}</h1>
    <form id="cart-form" action="/cart/update" method="post" novalidate>
      <table class="cart-table">
        <thead>
          <tr>
            <th>{{ 'cart.product' | t }}</th>
            <th>{{ 'cart.quantity' | t }}</th>
            <th>{{ 'cart.price' | t }}</th>
            <th>{{ 'cart.total' | t }}</th>
            <th>{{ 'cart.remove' | t }}</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td>
                <div class="cart-product">
                  <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.product.title }}" class="cart-product-img">
                  <div>
                    <div class="cart-product-title">{{ item.product.title }}</div>
                    {% if item.variant.title != 'Default Title' %}
                      <div class="cart-product-variant">{{ item.variant.title }}</div>
                    {% endif %}
                  </div>
                </div>
              </td>
              <td>
                <div class="cart-qty-form">
                  <button type="button" class="cart-qty-btn" onclick="updateQty('{{ item.key }}', -1)" {% if item.quantity <= 1 %}disabled{% endif %}>-</button>
                  <input type="number" name="updates[{{ item.key }}]" value="{{ item.quantity }}" class="cart-qty-input" readonly>
                  <button type="button" class="cart-qty-btn" onclick="updateQty('{{ item.key }}', 1)">+</button>
                </div>
              </td>
              <td>
                <span>{{ item.price | money }}</span>
              </td>
              <td>
                <span>{{ item.line_price | money }}</span>
              </td>
              <td>
                <button type="button" class="cart-remove-btn" onclick="removeItem('{{ item.key }}')">{{ 'cart.remove' | t }}</button>
              </td>
            </tr>
          {% endfor %}
        </tbody>
        <tfoot>
          <tr class="cart-subtotal-row">
            <td colspan="4" style="text-align:right;">{{ 'cart.subtotal' | t }}:</td>
            <td>{{ cart.total_price | money }}</td>
          </tr>
        </tfoot>
      </table>
      <div style="text-align:right;">
        <a href="/" class="button cart-continue-btn">{{ 'cart.continue_shopping' | t }}</a>
        <button type="submit" class="button cart-checkout-btn">{{ 'cart.update_cart' | t }}</button>
        <a href="/checkout" class="button cart-checkout-btn">{{ 'cart.checkout' | t }}</a>
      </div>
    </form>
  </div>
{% else %}
  <!-- Show empty cart message when cart IS empty -->
  <div class="cart-empty">
    <h2>{{ 'cart.empty_title' | t }}</h2>
    <p>{{ 'cart.empty_message' | t }}</p>
    <a href="/" class="cart-empty-btn">{{ 'cart.continue_shopping' | t }}</a>
  </div>
{% endif %}

<script>
  // Function to update the quantity of a cart item
  function updateQty(key, change) {
    const input = document.querySelector(`input[name="updates[${key}]"]`);
    const newQty = parseInt(input.value) + change;

    if (newQty >= 1) {
      input.value = newQty;
      document.getElementById('cart-form').submit();
    }
  }

  // Function to remove an item from the cart
  function removeItem(key) {
    const input = document.querySelector(`input[name="updates[${key}]"]`);
    input.value = 0; // Set quantity to 0 to remove the item
    document.getElementById('cart-form').submit();
  }
</script>